<?xml version="1.0"?>

<System>

<Plugins>
    <plugin name="PowerInsight" lib="libpwr_piapidev"/>
</Plugins>

<Devices>
    <device name="PIAPI-socket" plugin="PIAPI" initString="10.54.21.80:20201"/>
</Devices>

<Objects>

<obj name="plat" type="Platform">

    <attributes>
        <attr name="VOLTAGE" op="AVG">
            <src type="child" name="node" />
        </attr>
        <attr name="CURRENT" op="AVG">
            <src type="child" name="node" />
        </attr>
        <attr name="POWER" op="AVG">
            <src type="child" name="node" />
        </attr>
        <attr name="MIN_POWER" op="AVG">
            <src type="child" name="node" />
        </attr>
        <attr name="MAX_POWER" op="AVG">
            <src type="child" name="node" />
        </attr>
        <attr name="ENERGY" op="SUM">
            <src type="child" name="node" />
        </attr>
    </attributes>

    <children>
        <child name="node" />
    </children>

</obj>

<obj name="plat.node" type="Node" >

    <attributes>
        <attr name="VOLTAGE" op="AVG" >
            <src type="child" name="socket" />
        </attr>
        <attr name="CURRENT" op="AVG" >
            <src type="child" name="socket" />
        </attr>
        <attr name="POWER" op="AVG" >
            <src type="child" name="socket" />
        </attr>
        <attr name="MIN_POWER" op="AVG" >
            <src type="child" name="socket" />
        </attr>
        <attr name="MAX_POWER" op="AVG" >
            <src type="child" name="socket" />
        </attr>
        <attr name="ENERGY" op="SUM" >
            <src type="child" name="socket" />
        </attr>
    </attributes>

    <children>
        <child name="socket" />
    </children>

</obj>

<obj name="plat.node.socket" type="Socket" >

    <devices>
        <dev name="piapidev" device="PIAPI-socket" openString="1" /> 
    </devices>

    <attributes>
        <attr name="VOLTAGE" op="AVG">
            <src type="device" name="piapidev" />
        </attr>
        <attr name="CURRENT" op="AVG">
            <src type="device" name="piapidev" />
        </attr>
        <attr name="POWER" op="AVG">
            <src type="device" name="piapidev" />
        </attr>
        <attr name="MIN_POWER" op="AVG">
            <src type="device" name="piapidev" />
        </attr>
        <attr name="MAX_POWER" op="AVG">
            <src type="device" name="piapidev" />
        </attr>
        <attr name="ENERGY" op="SUM">
            <src type="device" name="piapidev" />
        </attr>
    </attributes>

</obj>

</Objects>
</System>
